<a href="<%= user_path(current_user) %>">
  <% if current_user.use_gravatar %>
    <%= gravatar_for current_user, size: 52  %>
  <% elsif !current_user.avatar.blank? %>
    <%= image_tag current_user.avatar.url, alt: "User Image", width: 52, height: 52 %>
  <% else %>
    <%= image_tag "/assets/NoPhotoAvailable.jpg", alt: "No Image Available", width: 52, height: 52 %>
  <% end %>
</a>
<h1>
  <%= current_user.name %>
</h1>
<div>
  <%= link_to "view my profile", current_user %>
</div>
<div>
  <%= pluralize(current_user.microposts.count, "micropost") %>
</div>